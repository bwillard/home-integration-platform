<Window x:Class="HomeIntegrationPlatform.Engine.RemoteControl.PickDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pick an Action" Height="100" Width="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Device Id: "/>
            <TextBox Name="DeviceId" Width="70"/>
        </StackPanel>
        <Button Content="Ok" IsDefault="True" Click="OKClicked"/>
    </StackPanel>
</Window>
